<!DOCTYPE html>
<html>
  <%- include('../sections/header'); %>
  <body>
    <%- include('../sections/navbar'); %>
    <main>
      <%- include('../sections/sidebar'); %>
      <div class="d-flex flex-column flex-shrink-0 p-3 bg-white h-100">
        <h1>Ordine</h1>
        <form method="post" action="/orders/<%= data.order.id %>">
          <div class="form-group">
            <p>ID: <%= data.order.id %></p>
            <p>ID: <%= data.order.code %></p>
            <p>Utente: <%= data.user.firstName + ' ' + data.user.lastName %></p>
            <p>Prodotto: <%= data.item.name %></p>
          </div>
          
          <div class="form-group">
            <label for="code">Descrizione</label>
            <textarea
              id="description"
              name="description"
              class="form-control"
              placeholder="Descrizione"
              required=""
              autofocus=""
              rows="5"
              value=""
            >
<%= data.order.description %>
          </textarea
            >
          </div>

          <button class="btn btn-primary btn-block mt-1 w-100" type="submit">
            Salva
          </button>
        </form>
      </div>
    </main>
  </body>
</html>
