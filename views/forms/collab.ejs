<!DOCTYPE html>
<html>
  <%- include('../sections/header'); %>
  <body>
    <%- include('../sections/navbar'); %>
    <main>
      <%- include('../sections/sidebar'); %>
      <div class="d-flex flex-column flex-shrink-0 p-3 bg-white h-100">
        <h1>Collaboratore</h1>
        <form method="post" action="/collabs/<%= collab.id %>">
          <div class="form-group">
            <label for="id">ID: <%= collab.id %></label>
            <input
              type="text"
              id="id"
              name="id"
              class="form-control"
              disabled
              placeholder="id"
              required=""
              autofocus=""
              value="<%= collab.id %>"
            />
          </div>

          <div class="form-group">
            <label for="name">Nome</label>
            <input
              disabled
              type="text"
              id="name"
              name="name"
              class="form-control"
              placeholder="Nome"
              required=""
              autofocus=""
              value="<%= collab.firstName %>"
            />
          </div>

          <div class="form-group">
            <label for="code">Cognome</label>
            <input
              disabled
              type="text"
              id="code"
              name="code"
              class="form-control"
              placeholder="Codice"
              required=""
              autofocus=""
              value="<%= collab.lastName %>"
            />
          </div>

          <button class="btn btn-primary btn-block mt-1 w-100" type="submit">
            Salva
          </button>
        </form>
      </div>
    </main>
  </body>
</html>
