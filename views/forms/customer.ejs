<!DOCTYPE html>
<html>
  <%- include('../sections/header'); %>
  <body>
    <%- include('../sections/navbar'); %>
    <main>
      <%- include('../sections/sidebar'); %>
      <div class="d-flex flex-column flex-shrink-0 p-3 bg-white h-100">
        <h1>Cliente</h1>
        <form method="post" action="/customers/<%= customer.id %>">
          <div class="form-group">
            <label for="id">ID: <%= customer.id %></label>
            <input
              type="text"
              id="id"
              name="id"
              class="form-control"
              disabled
              placeholder="id"
              required=""
              autofocus=""
              value="<%= customer.id %>"
            />
          </div>

          <div class="form-group">
            <label for="firstName">Nome</label>
            <input
              type="text"
              id="firstName"
              name="firstName"
              class="form-control"
              placeholder="Nome"
              required=""
              autofocus=""
              value="<%= customer.firstName %>"
            />
          </div>

          <div class="form-group">
            <label for="lastName">Cognome</label>
            <input
              type="text"
              id="lastName"
              name="lastName"
              class="form-control"
              placeholder="Cognome"
              required=""
              autofocus=""
              value="<%= customer.lastName %>"
            />
          </div>

          <button class="btn btn-primary btn-block mt-1 w-100" type="submit">
            Salva
          </button>
        </form>
      </div>
    </main>
  </body>
</html>
